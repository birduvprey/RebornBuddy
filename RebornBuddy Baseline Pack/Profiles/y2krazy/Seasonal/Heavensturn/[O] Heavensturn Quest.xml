					<ExLog Color="&ExLog;" Name="Heavensturn" Message="Turning in the A Thousand Blows quest!"/>
					<MoveTo Name="Tori Bugyo" XYZ="16.28131, 45.656, 133.9285"/>
					<TurnIn QuestId="67085" NpcId="1018123" XYZ="16.28131, 45.656, 133.9285"/>
